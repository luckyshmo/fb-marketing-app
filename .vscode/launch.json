    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run serve:ssl --prefix targetted-client/",
            "name": "client",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "VUE_APP_API_URL":"http://localhost:8080",
                "VUE_APP_FACEBOOK_APP_ID":"914216406086238"
            }
        },
        {
            "name": "server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/targetted-back/cmd",
            "env": {
                "PG_HOST": "localhost",
                "PG_PORT": "5432",
                "PG_PAS": "example",
                "PG_SSLMODE": "disable",
                "PG_MIGRATIONS_PATH": "file://../pkg/repository/pg/migrations",
                "PG_USERNAME": "postgres",
                "PG_DBNAME": "postgres",
                "LOG_LEVEL": "debug",
                "APP_PORT": "8080",
                "ENVI": "debug"
            }
        }
    ],
    "compounds": [
        {
          "name": "Server/Client",
          "configurations": ["server", "client"],
        }
      ]
}